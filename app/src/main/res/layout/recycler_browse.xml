<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.podium.technicalchallenge.GetMoviesPageQuery.Movie" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/movie_image"
            style="@style/MoviePoster"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lazy_src="@{movie.posterPath}"
            app:layout_constraintDimensionRatio=".6667"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Rounded"
            app:title="@{movie.title}"
            tools:src="@mipmap/john_wick" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_text_view"
            style="@style/MovieTitle"
            android:text="@{movie.title}"
            app:layout_constraintEnd_toEndOf="@id/movie_image"
            app:layout_constraintStart_toStartOf="@id/movie_image"
            app:layout_constraintTop_toBottomOf="@id/movie_image"
            tools:text="John Wick 3 The King Danger cloasdfasdfasfdasfasser" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>